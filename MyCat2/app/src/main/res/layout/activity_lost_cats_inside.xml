<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lost_cat_results"
    tools:context=".LostCats_inside">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_inside"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/cat1"
        app:civ_border_color="#FAFAFA"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/name_inside"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="98dp"
        android:fontFamily="@font/mycat"
        android:gravity="center"
        android:text="Dalalf"
        android:textColor="#F4F3F6"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="170dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/breed_inside"
                android:layout_width="213dp"
                android:layout_height="35dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_back"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="amarican short hair"
                android:textAlignment="center"
                android:textColor="#F6F5F6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text=" فصيلة القط :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/area_inside"
                android:layout_width="184dp"
                android:layout_height="35dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_back"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="al ardyah"
                android:textAlignment="center"
                android:textColor="#F6F5F6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text=" المنطقة :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/street_inside"
                android:layout_width="184dp"
                android:layout_height="35dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_back"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="4-8"
                android:textAlignment="center"
                android:textColor="#F6F5F6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text=" القطعة - الشارع :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details_inside"
                android:layout_width="184dp"
                android:layout_height="90dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_back"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text="ذكر و لديه سن مكسور و لونه بني مع خطوط سوداء"
                android:textAlignment="center"
                android:textColor="#F6F5F6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text="معلومات القط  :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/phone_inside"
                android:layout_width="184dp"
                android:layout_height="35dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/text_back"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="94854251"
                android:textAlignment="center"
                android:textColor="#F6F5F6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textVie7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
               android:layout_marginStart="150dp"
                android:layout_weight="1"
                android:fontFamily="@font/arabic"
                android:gravity="center"
                android:text="للتواصل  :"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/call_btn"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_phone_forwarded_24" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>