<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_lostCats"
    android:background="@drawable/adopte_head">

    <ImageView
        android:id="@+id/download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_download"
        android:layout_marginTop="205dp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="205dp"
        android:fontFamily="@font/arabic"
        android:text="صورة قطك  >"
        android:textColor="#463347"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ادخل معلومات قطك  :"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/arabic"
        android:layout_marginStart="100dp"
        android:textSize="25sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_lost_image"
        android:layout_width="160dp"
        android:layout_height="152dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="240dp"
        app:civ_border_color="#FAFAFA"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#00FFEAEA" />


    <Button
        android:id="@+id/confirm_lostCatAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/arabic"
        android:layout_marginStart="165dp"
        android:layout_marginTop="520dp"
        android:textColor="#F9F9FA"
        android:text="التقدم" />

    <LinearLayout
        android:layout_width="241dp"
        android:layout_height="598dp"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="140dp"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        >


        <EditText
            android:id="@+id/addLost_name_textView"
            android:layout_width="155dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text=""
            android:hint="اسم قطك"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textColorHint="@color/colorAccent"/>

        <EditText
            android:id="@+id/addLost_area_textView"
            android:layout_width="155dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text=""
            android:hint="المنطقة"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textColorHint="@color/colorAccent"/>

        <EditText
            android:id="@+id/addLost_street_textView"
            android:layout_width="155dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text=""
            android:hint="القطعة - الشارع"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textColorHint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/addLost_phone_textView"
            android:layout_width="165dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text=""
            android:hint="رقم هاتفك"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textColorHint="@color/colorAccent"/>



        <EditText
            android:id="@+id/addLost_breed_textView"
            android:layout_width="165dp"
            android:layout_height="33dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text=""
            android:hint="فصيلة القط"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textColorHint="@color/colorAccent"/>

        <EditText
            android:id="@+id/addLost_details_textViewCV"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bold"
            android:gravity="center_horizontal"
            android:hint="معلومات وصفية عن القط"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textColorHint="@color/colorAccent"/>
    </LinearLayout>

</RelativeLayout>